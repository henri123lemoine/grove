{
  "name": "grove-worktrees",
  "displayName": "Grove - Git Worktrees",
  "description": "Manage Git worktrees with ease",
  "version": "0.1.0",
  "publisher": "henrilemoine",
  "repository": {
    "type": "git",
    "url": "https://github.com/henrilemoine/grove"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "git",
    "worktree",
    "worktrees",
    "grove"
  ],
  "activationEvents": [
    "workspaceContains:.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "grove.openWorktree",
        "title": "Grove: Open Worktree"
      },
      {
        "command": "grove.createWorktree",
        "title": "Grove: Create Worktree"
      },
      {
        "command": "grove.deleteWorktree",
        "title": "Grove: Delete Worktree"
      },
      {
        "command": "grove.listWorktrees",
        "title": "Grove: List Worktrees"
      },
      {
        "command": "grove.openTerminal",
        "title": "Grove: Open Grove in Terminal"
      }
    ],
    "keybindings": [
      {
        "command": "grove.listWorktrees",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "editorTextFocus"
      }
    ],
    "views": {
      "scm": [
        {
          "id": "groveWorktrees",
          "name": "Worktrees",
          "when": "gitOpenRepositoryCount > 0"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "grove.createWorktree",
          "when": "view == groveWorktrees",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "grove.openWorktree",
          "when": "view == groveWorktrees",
          "group": "inline"
        },
        {
          "command": "grove.deleteWorktree",
          "when": "view == groveWorktrees && viewItem != current",
          "group": "grove"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.x"
  }
}
